{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@inoguez/strapi-types/*": ["../backend/types/generated/*"]
    },
    "baseUrl": ".",
    "rootDirs": [".", "../backend"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/providers/AppProvider.tsx",
    "../backend/types/generated/**/*.ts" // Añadir esta línea
  ],
  "exclude": ["node_modules"]
}
